{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && node dist/hooks/session-handler-cli.js start",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && node dist/hooks/session-handler-cli.js end",
            "timeout": 30
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matchers": [
          {
            "type": "tool",
            "tool": "Bash"
          }
        ],
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && node dist/hooks/pre-tool-handler-cli.js",
            "timeout": 15
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd ${CLAUDE_PLUGIN_ROOT} && node dist/hooks/incremental-extractor-cli.js",
            "timeout": 15
          }
        ]
      }
    ]
  }
}
